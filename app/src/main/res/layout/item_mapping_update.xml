<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_machine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            style="@style/semibold_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Machine *"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />

        <RelativeLayout
            android:id="@+id/rl_spinner_machine"
            android:layout_width="250dp"
            android:layout_height="32dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/ic_border_black">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_machine"
                style="@style/dropSpinner"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:dropDownWidth="match_parent"
                android:dropDownHorizontalOffset="32dp"
                android:dropDownVerticalOffset="32dp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_down_arrow" />
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>